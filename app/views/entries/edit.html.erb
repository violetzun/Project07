<div class="contentWhite">

	<%= form_for(@entry) do |f| %>
		<h2><%=@entry.movie.title%><h2>
		<h5>Editing entry</h5>

  		<% if @entry.errors.any? %>
    		<div id="error_explanation">
      			<h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>
      			<ul>
      				<% @entry.errors.full_messages.each do |msg| %>
        				<li><%= msg %></li>
      				<% end %>
      			</ul>
    		</div>
  		<% end %>

  		<div class="field">
    		<%= f.text_area( :content,:cols => 120, :rows => 40, :class => "redactor" )%>
  		</div>

  		<div class="actions">
    		<%= f.submit  class: 'myButton'  %>
  		</div>
	<% end %>

	<%= link_to 'Show', @entry ,method: :get %> |
	<%= link_to 'Back', entries_path,method: :get %>
</div>
